{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": ["@omg/typescript-config/base.json"],
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "outDir": "./dist",
    "baseUrl": "./lib",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "lib",
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}
